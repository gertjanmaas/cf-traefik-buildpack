#!/usr/bin/env bash
# bin/release <build_path>
set -e

BUILD_PATH=$1
BUILDPACK_PATH=$(dirname $(readlink -f ${BASH_SOURCE%/*}))

cp "${BUILDPACK_PATH}/traefik.sh" "${BUILD_PATH}/.traefik.sh" > /dev/null
chmod +x "${BUILD_PATH}/.traefik.sh" > /dev/null

cat <<EOF
default_process_types:
  web: ./.traefik.sh
EOF