#!/usr/bin/env bash
# bin/release <build_path>
set -e

BUILD_PATH=$1
BUILDPACK_PATH=$(dirname $(readlink -f ${BASH_SOURCE%/*}))

cp "${BUILDPACK_PATH}/traefik.sh" "${BUILD_PATH}/.traefik.sh"
chmod +x "${BUILD_PATH}/.traefik.sh"

cat <<EOF
---
default_process_types:
  web: echo "Test" && /home/vcap/app/.traefik.sh
EOF